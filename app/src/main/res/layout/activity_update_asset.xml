<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".activities.UpdateAsset">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/edit_asset_name"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:hint="asset name"
            android:layout_toRightOf="@id/name"
            android:layout_alignBottom="@id/name"/>

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/name"/>

        <Spinner
            android:id="@+id/asset_company_spinner_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/company"
            android:layout_alignBottom="@id/company"
            android:layout_below="@id/edit_asset_name"/>

        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/company" />

        <Spinner
            android:id="@+id/asset_model_spinner_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/model"
            android:layout_alignBottom="@id/model"
            android:layout_below="@id/asset_company_spinner_edit"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/model"/>

        <Spinner
            android:id="@+id/asset_status_spinner_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/status"
            android:layout_alignBottom="@id/status"
            android:layout_below="@id/asset_model_spinner_edit"/>

        <Button
            android:id="@+id/edit_asset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_below="@id/status"/>

</RelativeLayout>